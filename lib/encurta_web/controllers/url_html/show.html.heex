<div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100 py-8">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="bg-white shadow-lg rounded-lg p-6 mb-8">
      <div class="text-center">
        <div class="text-green-500 mb-4">
          <svg class="mx-auto h-16 w-16" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <h1 class="text-3xl font-bold text-gray-900 mb-2">URL Encurtada com Sucesso!</h1>
        <p class="text-gray-600">Sua URL foi encurtada e est√° pronta para uso</p>
      </div>
    </div>

    <!-- URL Details Card -->
    <div class="bg-white shadow-lg rounded-lg p-8 space-y-6">
      <!-- URL Original -->
      <div>
        <label class="block text-sm font-medium text-gray-500 uppercase tracking-wide mb-2">URL Original</label>
        <div class="bg-gray-50 p-4 rounded-lg border">
          <.link href={@url.url} target="_blank" class="text-blue-600 hover:text-blue-800 underline break-all">
            {@url.url}
          </.link>
        </div>
      </div>

      <!-- URL Encurtada -->
      <div>
        <label class="block text-sm font-medium text-gray-500 uppercase tracking-wide mb-2">URL Encurtada</label>
        <div class="bg-green-50 p-4 rounded-lg border border-green-200">
          <div class="flex items-center justify-between">
            <.link 
              href={~p"/#{@url.short}"} 
              target="_blank" 
              class="text-green-700 hover:text-green-800 underline font-mono text-lg font-medium"
            >
              {EncurtaWeb.Endpoint.url() <> "/" <> @url.short}
            </.link>
            <button 
              class="ml-4 px-4 py-2 bg-green-100 hover:bg-green-200 text-green-700 rounded-lg transition duration-200 flex items-center gap-2"
              onclick={"navigator.clipboard.writeText('#{EncurtaWeb.Endpoint.url()}/#{@url.short}'); this.innerHTML='‚úÖ Copiado!'; setTimeout(() => this.innerHTML='üìã Copiar', 2000)"}
            >
              üìã Copiar
            </button>
          </div>
        </div>
      </div>

      <!-- C√≥digo -->
      <div>
        <label class="block text-sm font-medium text-gray-500 uppercase tracking-wide mb-2">C√≥digo</label>
        <div class="bg-gray-50 p-4 rounded-lg border">
          <span class="font-mono text-lg text-gray-800">{@url.short}</span>
        </div>
      </div>

      <!-- Data de Cria√ß√£o -->
      <div>
        <label class="block text-sm font-medium text-gray-500 uppercase tracking-wide mb-2">Criado em</label>
        <div class="bg-gray-50 p-4 rounded-lg border">
          <span class="text-gray-700">
            {Calendar.strftime(@url.inserted_at, "%d de %B de %Y √†s %H:%M")}
          </span>
        </div>
      </div>
    </div>

    <!-- Actions -->
    <div class="mt-8 flex justify-center gap-4">
      <.link href={~p"/urls/new"}>
        <.button class="bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-6 rounded-lg transition duration-200">
          Encurtar Outra URL
        </.button>
      </.link>
      <.link href={~p"/urls/#{@url}/edit"}>
        <.button class="bg-yellow-600 hover:bg-yellow-700 text-white font-medium py-2 px-6 rounded-lg transition duration-200">
          Editar
        </.button>
      </.link>
    </div>

    <!-- Navigation -->
    <div class="mt-6 text-center space-x-4">
      <.link href={~p"/"} class="text-gray-600 hover:text-gray-800 underline">
        ‚Üê In√≠cio
      </.link>
      <.link href={~p"/urls"} class="text-blue-600 hover:text-blue-800 underline">
        Ver todas as URLs
      </.link>
    </div>
  </div>
</div>
